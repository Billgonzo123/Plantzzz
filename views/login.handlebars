<div class="login-main">
    <div class="logo">
        <h1>Plantzzz</h1>
    </div>

    <div id="login" class="container">
        <h2 class="login-title">Login</h2>
        <div class="login-form">
            <form method="post">
                <div class="form-field">
                    <p>Username</p>
                    <label class="user" for="login-username"></label>
                    <input id="login-username" type="text" class="form-input" placeholder="Enter email address"
                        required>
                </div>
                <div class="form-field">
                    <p>Password</p>
                    <label class="password" for="login-password"></label>
                    <input id="login-password" type="password" class="form-input" placeholder="Enter password" required>
                </div>
                <div class="form-field login-submit">
                    <input type="submit" value="Log In Now">
                </div>
            </form>
        </div>
        <a class="login-link" href="#">Sign Up</a>
    </div>

