<!-- This displays all the data from the tables -->
<P>------Plants-------</P>
{{#each plants as |plant|}}

<p>
   CommonName: {{plant.common_name}}</br>
    Botanical name: {{plant.botanical_name}}</br>
     Light:  {{plant.light}}</br>
      Days between watering: {{plant.watering_interval}}</br>
      Difficulty:  {{plant.difficulty}}</br>
      Soil: {{plant.soil}}</br>
      Temp:    {{plant.temp}}</br>

</p>
{{/each}}

<P>-------Users---------</P>
{{#each users as |user|}}

<p>
    {{user.username}} </br>
    {{user.email}} </br>
    {{user.password}} </br>
    </p>
{{/each}}

<P>--------User Plants--------</P>
{{#each userPlants as |userPlant|}}

<p>
    Name: {{userPlant.nickname}} </br>
     Plant ID: {{userPlant.plant_id}} </br>
